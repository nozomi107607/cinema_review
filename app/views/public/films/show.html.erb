<div>
  <div>詳細</div>
  <p>Title</p>
  <div><%= @film.film_title %></div>
  <p>Introduction</p><%= @film.introduction %>
  <p>Body</p><%= @film.body %>
  <p>評価 :<%= @film.evaluation%>点</p>
    <div id="star-rate<%= @film.id %>"></div>
    <script>
      $('#star-rate<%= @film.id%>').raty({
        size      : 36,
        starOff   : '<%= asset_path('star-off.png') %>',
        starOn    : '<%= asset_path('star-on.png') %>',
        half      : false,
        readOnly: true,
        score: <%= @film.evaluation %>,
      });
    </script>
    <% if @film.user == current_user %>
    <%= link_to "Edit", edit_public_film_path(@film.id) %>
    <%= link_to "Destroy", public_film_path(@film), method: :delete %>
    <% end %>

</div>