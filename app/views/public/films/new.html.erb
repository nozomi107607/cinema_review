<div class="container">
  <h3>New Film</h3>
  <%= form_with model: @film, url: public_films_path(@film.id),method: :post do |f| %>
    <div class="form-group">
      <label>Title</label><br>
      <%= f.text_field :film_title, class:"form-control film_title" %>
    </div>
    <div class="form-group">
      <label>Introduction</label><br>
      <%= f.text_field :introduction, class:"form-control introduction" %>
    </div>
    <div class="form-group">
      <label>Body</label><br>
      <%= f.text_area :body, class:"form-control body" %>
    </div>
    <div class="form-group row" id="star">
      <label>評価</label>
    　<%= f.hidden_field :evaluation, id: :evaluation %>
    </div>
    <script>
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',

        scoreName: 'film[evaluation]',
        half: false,
      });
    </script>
    <div class="form-group">
      <%= f.submit 'Entry', class:'btn btn-success' %>
    </div>
  <% end %>
</div>