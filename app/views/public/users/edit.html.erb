<div>
  <h3>ユーザー登録情報変更</h3>
  <%= form_with model: @user, url: public_user_path(@user.id),method: :patch do |f| %>
    <%= f.label :name %><br />
    <%= f.text_field :user_name %><br />

    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>

    <%= f.submit "変更を保存" %>
  <% end %>
</div>